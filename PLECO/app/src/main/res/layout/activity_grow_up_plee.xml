<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GrowUpPleeActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--    progress: 상태가 변하기 전 초기값 설정-->
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/state_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:max="100"
            android:progress="70"
            android:progressDrawable="@drawable/progressbar_layou"
            app:layout_constraintRight_toLeftOf="@+id/btn_move2pleelist"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_move2pleelist"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#5A7FA3"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>

    <ImageView
        android:id="@+id/view_plee"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/example_plant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/growup_bottom_navigation_tab"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/Growup_EcoGallery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="0.25"
            android:background="@color/colorBackGround"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/Growup_Camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="0.25"
            android:background="@color/colorBlack"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/Growup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="0.25"
            android:background="@color/colorItem"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/Growup_Userinfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.25"
            android:background="@color/colorDarkGray"
            android:src="@drawable/ic_launcher_foreground" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>